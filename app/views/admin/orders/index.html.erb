<%= content_for :page_title, 'Orders' %>

<div class="container content">
  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Ordered By</th>
        <th>Delivery By</th>
        <th>Items</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |o| %>
        <tr>
          <td><%= o.id %></td>
          <td><%= link_to o.customer.name, admin_customer_path(o.customer.id) %></td>
          <td><%= link_to o.partner.name, admin_partner_path(o.partner.id) %></td>
          <td><%= link_to o.items.count, admin_order_items_path(o.id) %></td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
