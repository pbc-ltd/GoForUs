<%= content_for :page_title, "Partner: #{@partner.name.titleize}" %>

<div class="container content">
  <%= form_for @partner, url: admin_partner_path(@partner) do |f| %>
    							
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :mobile_number, class: 'form-control' %>
    </div>

    <div class="action">
      <%= f.submit class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
