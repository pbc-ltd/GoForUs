<%= content_for :page_title, 'Partners' %>

<div class="container">
  <div class="row">
    <div class="admin_pagination">
      <div class="page_info">
        <%= page_entries_info @partners %>
      </div>

      <div class='page_numbers'>
        <%= will_paginate @partners, container: false %>
      </div>
    </div>
  </div>
</div>

<div class="container content">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Mobile Mobile</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @partners.each do |p| %>
        <tr>
          <td><%= p.name %></td>
          <td><%= p.mobile_number  %></td>
          <td>
            <%= link_to 'View', admin_partner_path(p) %> |
            <%= link_to 'Edit', edit_admin_partner_path(p) %> |
            <% if p.deactivated? %>
              <%= link_to '[ACTIVATE]', admin_partner_activate_path(p.id), method: :post %>
            <% else %>
              <%= link_to '[DEACTIVATE]', admin_partner_deactivate_path(p.id), method: :post %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
